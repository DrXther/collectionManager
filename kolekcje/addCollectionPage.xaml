<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kolekcje.addCollectionPage"
             Title="addCollectionPage">
    
    <Shell.TitleView>
        <Grid>
            <Label Text="Dodaj kolekcje" x:Name="Headbar"/>
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/addCollectionPageStyle.css" />
    </ContentPage.Resources>

    <StackLayout StyleClass="pageBackground">
        <Entry x:Name="collectionNameEntry" StyleClass="entryStyle" Placeholder="Nazwa kolekcji:"/>

        <Button Text="Dodaj kolekcjÄ™" Clicked="addCollection" StyleClass="button"/>
    </StackLayout>
</ContentPage>