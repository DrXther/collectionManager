<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kolekcje.collectionItemsListPage"
             Title="collectionItemsListPage">
    <Shell.TitleView>
        <Grid>
            <Label x:Name="Headbar"/>
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/collectionItemsListPageStyle.css" />
    </ContentPage.Resources>

    <StackLayout StyleClass="pageBackground ">
        <ScrollView>
            <StackLayout x:Name="collectionItemsLayout"/>
        </ScrollView>

        <Button Text="Odznacz wybrane przedmioty" Clicked="clearSelectedItems" StyleClass="button"/>
    </StackLayout>
</ContentPage>